@model UserManagement_Mvc.Models.User

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm("LoginCustom", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <br />

    <p style="color:red; text-align: center; font-size: 22px">@ViewBag.CheckValid</p>
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-4">Tên đăng nhập</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Mật khẩu</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <div class="form-group">
            <div class="col-md-offset-5 col-md-3">
                <input type="submit" value="Đăng nhập" class="btn btn-success" />
            </div>
            <div class="col-md-4">
            </div>
        </div>
        <hr />
        <br />
        <div class="form-group">
            <div class="col-md-4">
            </div>
        </div>
    </div>
}
